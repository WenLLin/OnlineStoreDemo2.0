@{
    ViewData["Title"] = "Shopping Cart";
}

<!DOCTYPE html>
<html>
<head>
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="card  shadow-sm">
        <div class="card-header">
            <h1 class="my-0 font-weight-normal">Shopping Cart</h1>
        </div>
        <div class="row pt-4">
            <div class="col-md-3 pl-5 pb-4">
                <img class="img-thumbnail" src="~/img/Shorts.jpg" style="height:200px; width: 200px;" />
            </div>
            <div class="col-md-8">
                <h4 class="card-title pricing-card-title"> POCS Shorts <a class="text-black-50">(The one and only)</a></h4>
                <div class="row mb-2">
                    <div class="col-md-2 ">
                        Price:
                    </div>
                    <div class="col-md-8 ">
                        $10.99
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-2 ">
                        Qt:
                    </div>
                    <div class="input-group col-md-3">
                        <input type="text" class="form-control" placeholder="3" >
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">Remove</span>
                        </div>
                    </div>
                </div>
                <div class="row mb-2">
                    <div class="col-md-2 ">
                        Total Price:
                    </div>
                    <div class="col-md-8 ">
                        $32.97
                    </div>
                </div>
                </div>
        </div>
        <button type="button" class="btn btn-lg btn-block btn-outline-primary"><a asp-area="" asp-controller="Cart" asp-action="CheckOut">Take Them Home</a></button>
    </div>


</body>

</html>